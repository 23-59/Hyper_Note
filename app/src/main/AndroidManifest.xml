<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.A_23_59.hypernote" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_hyper_note"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_hyper_note"
        android:supportsRtl="true"
        android:theme="@style/Theme.HyperNote" >
        <activity
            android:name=".edit_page.EditActivity"
            android:exported="false" />
        <activity
            android:name=".add_page.Add_Activity"
            android:exported="false" />
        <activity
            android:name=".main_page.MainActivity"
            android:exported="true"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>